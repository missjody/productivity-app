        "express-session": "^1.17.0",
        "if-env": "^1.0.4",
        "jquery": "^3.5.1",
        "materialize-css": "^1.0.0-rc.2",
        "moment": "^2.24.0",
        "mongoose": "^5.3.16",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
